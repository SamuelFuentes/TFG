<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />
    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:gravity="top|left"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="top"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cities" />
                <Spinner
                    android:id="@+id/spinnerCities"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1" />
            </LinearLayout>
                <RadioGroup
                    android:id="@+id/radioGroupFuels"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioAll"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:onClick="onRadioButton"
                        android:text="@string/all" />
                    <RadioButton
                        android:id="@+id/radioGas"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButton"
                        android:text="@string/gas" />
                    <RadioButton
                        android:id="@+id/radioGasoil"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButton"
                        android:text="@string/gasoil" />
                </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Button" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="186dp">
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/delete_all" />

        <Button
            android:id="@+id/buttonCalculateRoute"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/route" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewNormal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/black"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/textViewMinPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/green"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone" />
</FrameLayout>