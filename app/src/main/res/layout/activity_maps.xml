<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"/>
    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewCities"
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:text="Ciudad:"/>

                <Spinner
                    android:id="@+id/spinnerCities"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radioGroupFuels"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioAll"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Todos"
                        android:checked="true"
                        android:onClick="onRadioButton"/>
                    <RadioButton
                        android:id="@+id/radioGas"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Gas 95"
                        android:onClick="onRadioButton"/>
                    <RadioButton
                        android:id="@+id/radioGasoil"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Gasoil"
                        android:onClick="onRadioButton"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="186dp">
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Borrar Todo"/>

        <Button
            android:id="@+id/buttonCalculateRoute"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Crear Ruta"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewNormal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/black"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textViewMinPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/green"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone"/>
</FrameLayout>