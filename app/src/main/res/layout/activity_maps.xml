<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        tools:context=".ui.MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_gray"
        android:gravity="top|left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cities" />

                <Spinner
                    android:id="@+id/spCities"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/cities" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="186dp">

                <RadioGroup
                    android:id="@+id/rGFuels"
                    android:layout_width="253dp"
                    android:layout_height="48dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rAll"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:onClick="onRadioButton"
                        android:text="@string/all"/>

                    <RadioButton
                        android:id="@+id/rGas"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButton"
                        android:text="@string/gas"/>

                    <RadioButton
                        android:id="@+id/rGasoil"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButton"
                        android:text="@string/gasoil"/>
                </RadioGroup>

                <ImageButton
                    android:id="@+id/bRoute"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_route32x32"
                    android:background="@color/gray"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/bSearch"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icon_search40x40"
            android:background="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="186dp">

        <ImageButton
            android:id="@+id/bClear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icon_delete50x50"
            android:background="@color/light_gray"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tVNormal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/black"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tVMinPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/green"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="88dp"
        android:visibility="gone" />
</FrameLayout>